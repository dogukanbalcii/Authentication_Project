{% extends 'base.html.twig' %}

{% block title %}Hello World!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    {% if app.user %}
        <h1>Welcome, {{ app.user.email }} ✅ <br>Your role is {{ app.user.roles[0] }}</h1>
    {% else %}
        <h1>Hello Guest! ✅</h1>
    {% endif %}

    The menus are listed below
    <ul>
        {% if app.user %}
            {% if 'ROLE_ADMIN' in app.user.roles or 'ROLE_SUPER_ADMIN' in app.user.roles %}
                <li> <a href="{{ path('admin') }}">Admin</a></li>
            {% endif %}
        <li> <a href="{{ path('dashboard') }}">Dashboard</a></li>
        <li> <a href="{{ path('app_register') }}">Register</a></li>
        <li> <a href="{{ path('logout') }}">Logout</a></li>
        {% else %}
        <li> <a href="{{ path('login') }}">Login</a> </li>
        <li> <a href="{{ path('app_register') }}">Register</a></li>
        {% endif %}

    </ul>
</div>
{% endblock %}
